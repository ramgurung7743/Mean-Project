<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog List</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'>
</head>
<body>
  <header>
    <nav>
      <a href="/" class="nav-item">My Blog</a>
      <a href="/blogList" class="nav-item active">List Blogs</a>
      <a href="/blogAdd" class="nav-item">Add Blog</a>
    </nav>
  </header>

  <main class="container my-5">
    <h1>Blog List</h1>
    <div class="row">
      <% if (blogs && blogs.length > 0) { %>
        <% blogs.forEach(function(blog) { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= blog.blogTitle %></h5>
                <p>Author: <%= blog.author %></p>
                <p>Last updated: <%= moment(blog.createdAt).tz('America/New_York').fromNow() %></p>
                <a href="/edit/<%= blog._id %>" class="card-link text-primary"><i class="fas fa-edit"></i></a>
                <a href="/delete/<%= blog._id %>" class="card-link text-danger"><i class="fas fa-trash"></i></a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No blog posts to display.</p>
      <% } %>
    </div>
  </main>
</body>
</html>